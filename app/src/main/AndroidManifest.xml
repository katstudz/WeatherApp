<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.katarzyna.weatherapp">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_rain_100dp"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_rain_100dp"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.choosecity.ChooseCityActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.weatherdetails.WeatherDetailsActivity"/>
    </application>

</manifest>